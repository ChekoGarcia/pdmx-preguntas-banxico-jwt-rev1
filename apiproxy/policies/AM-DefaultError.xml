<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="AM-DefaultError">
    <DisplayName>AM-DefaultError</DisplayName>
    <Set>
        <Headers>
            <Header name="messageid">{messageid}</Header>
        </Headers>
        <Payload contentType="application/json">{"errores":[{"codigo": "{fault.name}", "mensaje": "Ocurrió un problema, inténtelo nuevamente más tarde."}]}</Payload>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="response"/>
</AssignMessage>