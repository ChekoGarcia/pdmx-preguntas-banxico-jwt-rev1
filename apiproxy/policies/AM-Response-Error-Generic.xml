<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="AM-Response-Error-Generic">
    <DisplayName>AM-Response-Error-Generic</DisplayName>
    <Set>
        <Headers>
            <Header name="messageid">{messageid}</Header>
        </Headers>
        <Payload contentType="application/json">
            {response.content}            
        </Payload>
        <StatusCode>{response.status.code}</StatusCode>
        <ReasonPhrase>{response.reason.phrase}</ReasonPhrase>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="response"/>
</AssignMessage>